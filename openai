  local payload

  if get-flag --help "$@"; then
    cmd-usage 'start-thread' 'META[]'
  fi

  payload=$(jq -n '{}')
  payload-meta payload "$@"

  request-beta https://api.openai.com/v1/threads -d "$payload"
}

