  local thread
  local payload

  if get-flag --help "$@"; then
    cmd-usage 'modify-thread' 'THREAD' 'META[]'
  fi

  thread=$(get-config --thread "$@") || die "modify-thread: expected --thread"

  payload=$(jq -n '{}')
  payload-meta payload "$@"

  request-beta "https://api.openai.com/v1/threads/$thread" -d "$payload"
